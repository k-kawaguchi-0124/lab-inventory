[Unit]
Description=Lab Inventory Web (Vite Dev Server)
After=network.target lab-inventory-api.service
Requires=network.target

[Service]
Type=simple
User=__APP_USER__
Group=__APP_USER__
Environment=NODE_ENV=development
EnvironmentFile=-/etc/default/lab-inventory
Environment=VITE_API_BASE=
ExecStart=/usr/bin/bash -lc 'cd "${REPO_DIR:-/opt/lab-inventory}/apps/web" && npm run dev -- --host 0.0.0.0 --port "${WEB_PORT:-5173}"'
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
